<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.edo.fares.gui.FlightSearchController"
      spacing="12">

    <!-- Padding -->
    <padding>
        <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
    </padding>

    <!-- Title -->
    <Label text="Flight Fare Optimizer" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Search bar -->
    <HBox spacing="8">
        <TextField fx:id="txtOrigin" promptText="Origin (e.g. MAD)" maxWidth="120"/>
        <TextField fx:id="txtDestination" promptText="Destination (e.g. BCN)" maxWidth="140"/>
        <DatePicker fx:id="dpDate" promptText="YYYY-MM-DD"/>
        <Button text="Search" onAction="#handleSearch"/>
    </HBox>

    <!-- Table of flights -->
    <TableView fx:id="tblFlights" prefHeight="380">
        <columns>
            <TableColumn fx:id="colCode" text="Code" prefWidth="90"/>
            <TableColumn fx:id="colAirline" text="Airline" prefWidth="140"/>
            <TableColumn fx:id="colOrigin" text="Origin" prefWidth="90"/>
            <TableColumn fx:id="colDestination" text="Destination" prefWidth="110"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
            <TableColumn fx:id="colPrice" text="Price (â‚¬)" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Status + Exit -->
    <HBox spacing="8" alignment="CENTER_LEFT">
        <Label fx:id="lblStatus" text="Ready." />
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Exit" onAction="#closeApp"/>
    </HBox>

</VBox>
