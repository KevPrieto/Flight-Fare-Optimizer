<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.edo.fares.gui.FlightSearchController"
            stylesheets="@style.css"
            prefWidth="950" prefHeight="600">

    <VBox spacing="18" AnchorPane.topAnchor="15" AnchorPane.bottomAnchor="15"
          AnchorPane.leftAnchor="15" AnchorPane.rightAnchor="15">

        <!-- TITLE -->
        <Label text="Flight Fare Optimizer" styleClass="title-label"/>

        <!-- SEARCH PANEL -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Origin:" minWidth="60"/>
            <TextField fx:id="txtOrigin" promptText="e.g. MAD" prefWidth="100"/>

            <Label text="Destination:" minWidth="85"/>
            <TextField fx:id="txtDestination" promptText="e.g. BCN" prefWidth="100"/>

            <Label text="Date:" minWidth="45"/>
            <DatePicker fx:id="dpDate" prefWidth="140"/>

            <!-- Use Region as flexible spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnSearch" text="Search"
                    onAction="#handleSearch"
                    prefWidth="100" styleClass="action-button"/>

            <Button fx:id="btnExport" text="Export to PDF"
                    onAction="#handleExport"
                    prefWidth="140" styleClass="action-button"/>

            <Button fx:id="btnClose" text="Close"
                    onAction="#closeApp"
                    prefWidth="90" styleClass="action-button"/>
        </HBox>

        <!-- TABLE -->
        <TableView fx:id="tblFlights" prefHeight="450">
            <columns>
                <TableColumn fx:id="colCode" text="Code" prefWidth="100"/>
                <TableColumn fx:id="colAirline" text="Airline" prefWidth="150"/>
                <TableColumn fx:id="colOrigin" text="Origin" prefWidth="100"/>
                <TableColumn fx:id="colDestination" text="Destination" prefWidth="100"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                <TableColumn fx:id="colPrice" text="Price (â‚¬)" prefWidth="100"/>
            </columns>
        </TableView>

        <!-- STATUS LABEL -->
        <Label fx:id="lblStatus" text="Ready." maxWidth="Infinity"/>
    </VBox>

</AnchorPane>
